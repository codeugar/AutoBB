@import "tailwindcss";

@theme {
  --font-sans: "Plus Jakarta Sans", ui-sans-serif, system-ui;
  --font-mono: "JetBrains Mono", ui-monospace, sfmono-regular;

  --color-zinc-950: #09090b;
  --color-zinc-900: #121214;
  --color-zinc-800: #1c1c1f;
  --color-zinc-700: #2a2a2e;
  --color-zinc-600: #3f3f46;
  --color-zinc-500: #71717a;
  --color-zinc-400: #a1a1aa;
  --color-zinc-300: #d4d4d8;
  --color-zinc-200: #e4e4e7;
  --color-zinc-100: #f4f4f5;

  --color-violet-400: #a78bfa;
  --color-violet-500: #8b5cf6;
  --color-violet-600: #7c3aed;

  --color-fuchsia-400: #e879f9;

  --color-emerald-400: #34d399;
  --color-emerald-500: #10b981;
}

@layer base {

  *,
  *::before,
  *::after {
    border-color: var(--color-zinc-800);
  }

  html,
  body {
    @apply antialiased text-zinc-100 bg-zinc-950;
    color: #f4f4f5;
    background-color: #09090b;
  }

  button {
    @apply cursor-pointer transition-all duration-200;
  }
}

@layer components {

  /* Al Card Style */
  .al-card {
    @apply bg-zinc-900/40 border border-white/5 rounded-2xl shadow-xl backdrop-blur-sm;
  }

  .al-card-hover {
    @apply hover:bg-zinc-800/60 hover:border-violet-500/20 hover:shadow-violet-500/5 transition-all duration-300;
  }

  /* Typography Utilities */
  .al-label {
    @apply text-[10px] font-bold uppercase tracking-[0.1em] text-zinc-500 mb-1.5 block px-1;
  }
}

/* Custom Scrollbar */
.custom-scrollbar::-webkit-scrollbar {
  width: 5px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: transparent;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 10px;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.15);
}

/* Animations */
@keyframes slideUpFade {
  from {
    opacity: 0;
    transform: translateY(12px) scale(0.97);
  }

  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.animate-slide-up {
  animation: slideUpFade 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.animate-fade-in {
  animation: fadeIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes glow-pulse {

  0%,
  100% {
    opacity: 0.3;
    transform: scale(1);
  }

  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

.animate-glow {
  animation: glow-pulse 4s infinite ease-in-out;
}